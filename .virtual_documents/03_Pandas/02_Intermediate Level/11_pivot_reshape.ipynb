print()

# Solution 20
print("Solution 20: Automated report generator")
def generate_sales_report(df, row_var, col_var, metric='sales_amount', agg='sum'):
    """Generate formatted sales report"""
    report = df.pivot_table(
        index=row_var,
        columns=col_var,
        values=metric,
        aggfunc=agg,
        margins=True,
        margins_name='TOTAL'
    )
    return report.round(0)


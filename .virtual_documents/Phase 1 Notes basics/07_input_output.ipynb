# Basic validation with try-except
def get_valid_age():
    """Get a valid age from user with error handling"""
    while True:
        try:
            age = int(input("Enter your age (0-120): "))
            if 0 <= age <= 120:
                return age
            else:
                print("Please enter an age between 0 and 120")
        except ValueError:
            print("Please enter a valid number")

